{
	"version": "independent",
	"npmClient": "pnpm",
	"useWorkspaces": true,
	"changelogPreset": "conventionalcommits",
	"command": {
		"version": {
			"allowBranch": [
				"main",
				"alpha",
				"beta",
				"next",
				"feat/**",
				"feature/**",
				"fix/**",
				"build/release"
			],
			"conventionalCommits": true,
			"ignoreChanges": [
				"*.spec.ts",
				"*.md"
			]
		},
		"publish": {
			"conventionalCommits": true,
			"ignoreChanges": [
				"*.spec.ts",
				"*.md"
			],
			"message": "chore(release): publish"
		}
	},
	"packages": [
		"packages/*"
	],
	"$schema": "node_modules/lerna/schemas/lerna-schema.json"
}